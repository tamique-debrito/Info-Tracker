{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "open-webpage",
        "type": "shell",
        "command": "start firefox http://localhost:8000/",
        "group": "build",
        "presentation": {
          "reveal": "always",
        }
      },
      {
        "label": "run-server",
        "type": "shell",
        "command": "uvicorn main:app --reload",
      },
      {
        "label": "run-app",
        "type": "shell",
        "command": "./run.bat",
      }
    ]
}